{
  "manifest_version": 2,
  
  "name": "Encrypt Bookmarks",
  "description": "",
  "version": "0.1.7",
  "description": "Encrypt your bookmarks",
  "icons": { "128": "icon.png" },
  

  "options_page": "options.html",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
   },
  
  "background": {
  	"persistent": true, 
  	"scripts": [
  		"jquery/jquery.min.js", "aes.js", "background.js"
  	]},
  
  "permissions": [
  	"bookmarks",
  	"storage",
  	"tabs"
  ]
  
}